# BK-Forum Environment Variables
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=3000

# MongoDB (REQUIRED)
# For local: mongodb://localhost:27017/bkforum
# For Atlas: mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/bkforum
MONGO_URI=mongodb://localhost:27017/bkforum

# JWT Configuration (REQUIRED)
# Generate a random secret: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Frontend URL (for CORS - REQUIRED for production)
FRONTEND_URL=http://localhost:5173
